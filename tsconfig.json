{
    "compilerOptions": {
      "target": "es2015",
      "module": "es2020",
      "moduleResolution": "node",
      "lib": ["es2018", "dom"],
      "outDir": "./out-tsc",
      "baseUrl": "./",
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "strict": true,
      "esModuleInterop": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  